<div class="row">
 <div class="form-horizontal">
 
  <fieldset>
  <!-- Form Starts Here -->

	    <%= form_for @task, :url => {:controller=>"task",:action=>"update",:method => "POST"} do |f| %>
     
  <div class="form-group">
   <label class="col-md-4 control-label" for="text-input">Task Name</label>
    <div class="col-md-2">
    <%= f.select :project_id,Project.all.map{|p| [p.project_name,p.id]},{:prompt=>"select project name"},{:class=>"form-control input-md"}%>
   </div>
  </div>

  <div class="form-group">
   <label class="col-md-4  control-label task-date" for="text-input" id="datepicker">Task Date</label>
    <div class="col-md-2">
     <%=f.text_field :task_date,:class=>"form-control input-md" %>
   </div>
  </div>
  
  <div class="form-group">
   <label class="col-md-4  control-label" for="text-input">Task Time</label>
    <div class="col-md-2">
     <%=f.text_field :task_duration,:class=>"form-control input-md" %>
   </div>
  </div>
  
  <div class="form-group">
   <label class="col-md-4  control-label" for="text-input">Task Description</label>
    <div class="col-md-2">
     <%=f.text_field :task_desc,:class=>"form-control input-md" %>
   </div>
  </div>
  <div class="form-group">
   <label class="col-md-4  control-label" for="text-input">Employee Name</label>
    <div class="col-md-2">
     <%= f.select :employee_id,Employee.all.map{|e| [e.emp_name,e.id]},{:prompt=>"Select Employee Name"},{:class=>"form-control input-md"} %>
   </div>
  </div>

  <div class="form-group">
   <label class="col-md-4  control-label" for="text-input">Task Estimation</label>
    <div class="col-md-2">
     <%= f.select :task_hour,options_for_select([['0.5 hr', 0.5], ['1 hr', 1], ['2 hr', 2], ['3 hr', 3], ['4 hr', 4],['5 hr', 5],['6 hr', 6],['7 hr', 7],['8 hr', 8],['9 hr', 9],['10 hr', 10],['11 hr', 11],['12 hr', 12]]),{:prompt=>"Select Hours"},{:class => 'form-control', required: true }  %>
   </div>
  </div>
   <div class="form-group">
   <label class="col-md-4  control-label" for="text-input">Task Status</label>
    <div class="col-md-2">
     <%= f.select :task_status, options_for_select([['In Progress', 'in progress'], ['In Test', 'In Test'], ['In Production', 'In production']]),{:prompt=>"Select Status"},{:class => 'form-control', required: true } %>
   </div>
  </div>
  
  


 <div class="form-group">
  <label class="col-md-4 control-label" for="buttoninput"></label>
   <div class="col-md-4">
     <%= f.submit "submit",:class=>"btn btn-success"%>
   </div>
 </div>
	<%end%>
</fieldset>
</div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    if(!window.location.hash) {
        window.location = window.location + '#loaded';
        window.location.reload();
    }else{
      //Init stuff here
    }
  })
</script>